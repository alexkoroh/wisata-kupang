        div(class="container  p-5 my-5 bg-white text-dark")
            h1 
                 u Tabel Admin
            hr
            div(class="table-responsive")
                table(class="table table-sm table-hover")
                table(class="table table-bordered table-sm table-hover")
                    tr 
                        th(width="90")  Id Admin 
                        th(width="200") Nama 
                        th(width="100")  Alamat
                        th(width="150")  Telepon
                        th(width="250") Email
                        th(width="150") Password
                        th(width="90") Ubah
                        th(width="90") Hapus
                    each tb_admin in tb_admins 
                        tr
                            td #{tb_admin['id_admin']}
                            td #{tb_admin['nama']}
                            td #{tb_admin['alamat']}
                            td #{tb_admin['telepon']}
                            td #{tb_admin['email']}
                            td #{tb_admin['password']}
                            td 
                                a(class="btn btn-sm btn-outline-success" href="/edit?id="+ tb_admin['id_admin']) Ubah 
                            td
                                a(class="btn btn-sm btn btn-outline-danger" href="/delete?id="+ tb_admin['id_admin']) Hapus 
            div(class="btn-group btn-group-sm")
                a(type="button" class="btn btn-primary" href="/add") Tambah data
                a(type="button" class="btn btn-success" href="/admin") Kembali
                 