            div(class="table-responsive")
                table(class="table table-sm table-hover")
                table(class="table table-bordered table-sm table-hover")
                    tr 
                        center 
                            th(width="90")  Id Restaurant 
                            th(width="50") Nama Restaurant
                            th(width="100") Lokasi Restaurant
                            th(width="200") Keterangan Restaurant
                            th(width="150") Gambar
                            th(width="20") Ubah
                            th(width="20") Hapus
                        each retaurant in retaurants 
                            tr
                                td #{retaurant['id_rest']}
                                td #{retaurant['nama_rest']}
                                td #{retaurant['lokasi_rest']}
                                td #{retaurant['deskripsi']}
                                td
                                    a(href="/uploads/" + retaurant.gambar target="_blank")
                                        img(src="/uploads/" + retaurant.gambar width="100%") 
                            
                                td 
                                    a(class="btn btn-sm btn-outline-success" href="/editRest?id="+ retaurant['id_rest']) Ubah 
                                td
                                    a(class="btn btn-sm btn btn-outline-danger" href="/deleteRest?id="+ retaurant['id_rest']) Hapus 
                div(class="btn-group btn-group-sm")
                    a(type="button" class="btn btn-primary" href="/addRest") Tambah data
                    a(type="button" class="btn btn-success" href="/admin") Kembali

                            
           
           
